# ===========================================
# UGC Commerce Engine - Environment Variables
# ===========================================

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ugc_commerce?schema=public"

# Redis (for BullMQ queues)
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# S3-Compatible Storage (R2/S3/MinIO)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET="ugc-media"
S3_REGION="us-east-1"
S3_PUBLIC_URL="http://localhost:9000/ugc-media"

# Stripe
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRICE_STARTER=""
STRIPE_PRICE_GROWTH=""
STRIPE_PRICE_SCALE=""

# Shopify (per-workspace, stored encrypted in DB)
# SHOPIFY_API_KEY=""
# SHOPIFY_API_SECRET=""

# TikTok API (if available)
# TIKTOK_CLIENT_KEY=""
# TIKTOK_CLIENT_SECRET=""

# Instagram/Meta API (if available)
# META_APP_ID=""
# META_APP_SECRET=""

# OpenAI Whisper API (for captions, optional)
OPENAI_API_KEY=""

# PostHog Analytics
POSTHOG_API_KEY=""
POSTHOG_HOST="https://app.posthog.com"

# Encryption key for storing OAuth tokens (32 bytes, base64 encoded)
ENCRYPTION_KEY=""

# App Configuration
NODE_ENV="development"
LOG_LEVEL="debug"
