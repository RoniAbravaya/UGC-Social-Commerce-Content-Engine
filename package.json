{
  "name": "ugc-commerce-engine",
  "version": "0.1.0",
  "private": true,
  "description": "UGC Commerce Engine - Multi-tenant SaaS for DTC brands to manage UGC, rights, and shoppable content",
  "scripts": {
    "dev": "turbo run dev",
    "build": "pnpm db:generate && turbo run build",
    "start": "pnpm --filter @ugc/web start",
    "start:prod": "pnpm db:migrate && pnpm start",
    "lint": "turbo run lint",
    "test": "pnpm --filter @ugc/shared test",
    "db:generate": "pnpm --filter @ugc/database db:generate",
    "db:push": "pnpm --filter @ugc/database db:push",
    "db:migrate": "pnpm --filter @ugc/database db:migrate:prod",
    "db:migrate:dev": "pnpm --filter @ugc/database db:migrate",
    "db:seed": "pnpm --filter @ugc/database db:seed",
    "db:studio": "pnpm --filter @ugc/database db:studio",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
